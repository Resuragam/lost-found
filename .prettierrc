{
  "tabWidth": 2,
  "formatOnSave": true,
  "bracketSameLine": true,
  "useTabs": false,
  "semi": true,
  "jsxSingleQuote": false,
  "overrides": [
    {
      "files": "*.wxml",
      "options": { "parser": "html" }
    },
    {
      "files": "*.wxss",
      "options": { "parser": "css" }
    },
    {
      "files": "*.wxs",
      "options": { "parser": "babel" }
    }
  ]
}
