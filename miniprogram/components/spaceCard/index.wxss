/* components/spaceCard/index.wxss */
.space-card-container {
  background-color: #fff;
  border-radius: 0 0 24rpx 24rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
}

.info-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.info-avatar-image {
  margin-right: 16rpx;
}

.info-nickname-text {
  font-size: 24rpx;
  color: #222b4a;
}

.info-box {
  display: flex;
  justify-content: center;
  align-items: center;
}

.detail-tag {
  --td-tag-medium-height: 50rpx;
  --td-tag-primary-light-color: #ecf3ff;
  --td-tag-primary-color: #4584ff;
  --td-tag-medium-font-size: 24rpx;
  --td-tag-square-border-radius: 24rpx;
}

.info-title-text {
  font-size: 28rpx;
  color: #222b4a;
  margin-bottom: 20rpx;
}

.info-image-list {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 16rpx;
}

.info-tags-container {
  display: flex;
}

.info-look-num {
  color: #989898;
  font-size: 24rpx;
  margin-right: 32rpx;
}

.info-space-tag {
  color: #4584ff;
  font-size: 24rpx;
}
