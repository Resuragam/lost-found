<!-- index.wxml -->
<view>
    <view class="search-module">
        <van-search
            class="search-filed"
            value="{{ searchValue }}"
            shape="round"
            placeholder="请输入内容"
        />
        <view class="search-quick-entrance-cell">
            <van-row gutter="16">
                <van-col span="12">
                    <van-cell
                        title="寻物招领"
                        label="寻找在校丢失物品"
                    />
                </van-col>
                <van-col span="12">
                    <van-cell
                        title="失物招领"
                        label="丢失物品寻找主人"
                    />
                </van-col>
            </van-row>
        </view>
    </view>
    <view>
        <view>
            <text>丢失范围</text>
            <text>范围寻找</text>
        </view>
        <view>
            <van-tag
                type="primary"
                size="large"
                >标签</van-tag
            >
            <van-tag type="success">标签</van-tag>
            <van-tag type="danger">标签</van-tag>
            <van-tag type="warning">标签</van-tag>
        </view>
    </view>
    <view class="article-container">
        <view>
            <text>寻物发现</text>
            <text>查看全部</text>
        </view>
        <view class="lost-article-list">
            <lost-article-card
                wx:for="{{ [1, 2, 3, 4, 5] }}"
                wx:key="index"
            ></lost-article-card>
        </view>
    </view>
</view>
