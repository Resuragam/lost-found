/**index.wxss**/
.custom-navbar {
  --td-navbar-color: #222b4a !important;
  --td-navbar-bg-color: linear-gradient(
    to left,
    rgb(180, 202, 232),
    rgb(146, 166, 241),
    rgb(180, 202, 232)
  ) !important;
}

.search-module {
  background-image: linear-gradient(to left, #b4cae8, #92a6f1, #b4cae8);
  padding: 32rpx;
}

.index-container {
  padding-bottom: calc(112rpx + env(safe-area-inset-bottom));
}

.white-search-input {
  background-color: rgba(243, 242, 242, 0.6) !important;
  --td-search-icon-color: #000;
  margin-bottom: 36rpx;
}

.search-entrance-container {
  margin-bottom: 48rpx;
}

.search-entrance-card {
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 24rpx;
  padding: 24rpx;
}

.lost-card-bg {
  background-image: linear-gradient(
    to bottom,
    rgb(110, 128, 158) 0%,
    rgb(151, 167, 192) 60%,
    rgb(164, 180, 203) 100%
  );
}

.found-card-bg {
  background-image: linear-gradient(
    to bottom,
    rgb(14, 90, 211) 0%,
    rgb(55, 116, 225) 60%,
    rgb(107, 149, 243) 100%
  );
}

.search-entrance-title {
  font-size: 32rpx;
  color: #ffffff;
  margin-bottom: 8rpx;
}

.search-entrance-tips {
  font-size: 24rpx;
  color: #ffffff;
}

.article-container {
  font-size: 32rpx;
}

.lost-range-container {
  border-radius: 32rpx;
  padding: 28rpx;
  background-color: #fff;
  margin-top: 24rpx;
}

.lost-range-title-left {
  font-size: 32rpx;
  color: #222b4a;
}

.lost-range-title-right {
  font-size: 24rpx;
  color: #4584ff;
}

.lost-range-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 28rpx;
}

.range-place-tag {
  --td-tag-large-height: 80rpx;
  --td-tag-primary-color: #4584ff;
  margin-right: 24rpx;
  --td-tag-large-font-size: 24rpx;
}

.lost-card-container {
  border: #f1f1f1 1px solid;
  display: inline-flex;
  margin-right: 24rpx;
  border-radius: 24rpx;
}
