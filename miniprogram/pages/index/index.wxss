/**index.wxss**/
.custom-navbar {
  --td-navbar-color: #222b4a !important;
  --td-navbar-bg-color: linear-gradient(to left, #b4cae8, #92a6f1, #b4cae8) !important;
}

.search-module {
  background-image: linear-gradient(to left, #b4cae8, #92a6f1, #b4cae8);
  padding: 8rpx;
}
.white-search-input {
  background-color: rgb(255, 255, 255, 60%) !important;
}
.article-container {
  padding: 8px;
}

.lost-range-container {
  background-color: #ffffff;
  margin: 8px;
  border-radius: 4px;
}

.lost-range-tag-list {
  width: 1000px;
  overflow-x: auto;
}

.lost-range-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 8px;
}

.lost-range-title-left {
  font-size: 12px;
}

.lost-range-title-right {
  font-size: 8px;
  color: #4584ff;
}
