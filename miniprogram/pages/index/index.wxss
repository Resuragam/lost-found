/**index.wxss**/
.search-module {
  background-image: linear-gradient(to left, #B4CAE8, #92A6F1, #B4CAE8);
  padding: 8rpx;
}
.white-search-input {
  background-color: #FFFFFF !important;
}
.article-container {
  padding: 8px;
}

.lost-range-container {
  background-color: #ffffff;
  margin: 8px;
  border-radius: 4px;
}

.lost-range-tag-list {
  width: 1000px;
  overflow-x: auto;
}

.lost-range-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 8px;
}

.lost-range-title-left {
  font-size: 12px;
}

.lost-range-title-right {
  font-size: 8px;
  color: #4584ff;
}
