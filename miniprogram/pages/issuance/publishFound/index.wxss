/* pages/issuance/publishFound/index.wxss */
.placeholder-container {
  position: absolute;
  width: 100%;
  height: 200rpx;
  z-index: -1;
  background-image: linear-gradient(
    to bottom,
    rgb(87, 144, 255),
    rgb(67, 130, 254) 32%,
    rgb(75, 135, 255, 0.4) 64%,
    rgb(68, 131, 255, 0.01) 100%
  ) !important;
  display: flex;
  justify-content: center;
}

.backed-container {
  background-color: rgb(242, 242, 242, 0.5);
  width: 600rpx;
  height: 200rpx;
  z-index: -2;
  position: relative;
  top: 16rpx;
  border-radius: 24rpx;
}

.form-container {
  background-color: #fff;
  padding: 32rpx;
  border-radius: 24rpx;
  margin-top: 32rpx;
}

.input-label {
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
}

.input-label-text {
  color: #222b4a;
  font-size: 32rpx;
  font-weight: bold;
  line-height: 32rpx;
}

.input-label-text::after {
  color: #222b4a;
  content: "*";
  position: relative;
  left: 16rpx;
}

.input-label-before {
  width: 8rpx;
  height: 32rpx;
  border-radius: 4rpx;
  display: inline-block;
  background-color: #4584ff;
  margin-right: 16rpx;
}

.t-input {
  margin-bottom: 36rpx;
  --td-input-vertical-padding: 24rpx;
  --td-input-bg-color: #f6f6f6;
  --td-input-label-text-color: #ccc;
  border-radius: 16rpx;
  line-height: 48rpx !important;
}

.t-textarea {
  margin-bottom: 36rpx;
  padding: 24rpx !important;
  --td-textarea-background-color: #f6f6f6;
  --td-textarea-label-text-color: #ccc;
  border-radius: 16rpx;
}

.t-cell {
  margin-bottom: 36rpx;
  padding: 24rpx !important;
  --td-cell-bg-color: #f6f6f6;
  --td-cell-title-color: #ccc;
  border-radius: 16rpx;
}
