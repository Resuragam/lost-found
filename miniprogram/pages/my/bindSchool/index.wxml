<view class="bindForm-conatiner">
  <van-cell-group>
    <van-field
      label="学校名称"
      value="{{ value }}"
      placeholder="请输入学校全名"
      border="{{ false }}"
      bind:change="onChange" />
    <van-field
      label="学院名称"
      value="{{ value }}"
      placeholder="请输入学院名称"
      border="{{ false }}"
      bind:change="onChange" />
    <van-field
      label="学号"
      value="{{ value }}"
      placeholder="请输入学号"
      border="{{ false }}"
      bind:change="onChange" />
  </van-cell-group>
</view>
<view class="bindForm-conatiner">
  <van-button type="info" block> 绑定 </van-button>
</view>
