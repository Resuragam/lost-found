/* pages/my/commonProblem/index.wxss */
.problem-container {
    border-radius: 12px;
    margin: 0px 12px;
    background-color: #ffffff;
    padding: 12px;
}

.problem-title {
    display: flex;
    justify-content: center;
    align-items: center;
}

.problem-title-text {
    color: #222B4A;
}

.problem-desc-text {
    font-size: 12px;
    color: #999999;
}

.problem-contact-container {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
}

.contact-wx-text {
    font-size: 14px;
    color: #222B4A;
    margin-bottom: 16px;
}
