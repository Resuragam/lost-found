<!--pages/my/myPage/index.wxml-->
<view
  class="myPage-container"
  style="{{bgColor}}">
  <t-avatar
    image="{{avatarUrl}}"
    size="large" />
  <view class="nickName-container">
    <text>{{nickName}}</text>
  </view>
  <view class="girfather">
    <image
      class="gifImg gif-wave"
      mode="aspectFill"
      src="https://hnust-ticknet-swzl.oss-cn-hangzhou.aliyuncs.com/secondClass/2021/08/30/88fa6475-d5eb-4178-bbf9-0bf656762779.gif"
      mode="scaleToFill"></image>
  </view>
</view>

<view class="tabbar-page-container default-container">
  <t-row class="record-container">
    <t-col
      span="12"
      bind:tap="toLostRecord">
      <view
        class="record-card-container"
        style="margin-right: 16rpx">
        <view>
          <view class="record-title-text">失物需求记录</view>
          <view class="record-num-text">24</view>
        </view>
        <view>
          <t-image
            src="/public/images/foundRecord.png"
            mode="aspectFill"
            width="60"
            height="60" />
        </view>
      </view>
    </t-col>
    <t-col
      span="12"
      bind:tap="toFoundRecord">
      <view
        class="record-card-container"
        style="margin-left: 16rpx">
        <view>
          <view class="record-title-text">寻物需求记录</view>
          <view class="record-num-text">24</view>
        </view>
        <t-image
          src="/public/images/lostRecord.png"
          mode="aspectFill"
          width="60"
          height="60" />
      </view>
    </t-col>
  </t-row>
  <t-cell-group theme="card">
    <t-cell
      title="学校绑定"
      leftIcon="city-14"
      hover
      arrow
      url="/pages/my/bindSchool/index" />
    <t-cell
      title="个人资料"
      leftIcon="edit"
      hover
      arrow
      url="/pages/my/info/index" />
    <t-cell
      title="常见问题"
      leftIcon="search"
      hover
      arrow 
      url="/pages/my/commonProblem/index"/>
    <t-cell
      title="意见反馈"
      leftIcon="mail"
      hover
      arrow />
  </t-cell-group>
</view>
