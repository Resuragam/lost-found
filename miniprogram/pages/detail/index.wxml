<!--pages/detail/index.wxml-->
<navigation-bar
  title="测试"
  leftArrow="{{true}}"
  custom-navbar="custom-navbar"></navigation-bar>
<t-swiper
  class="custom-swiper"
  height="675rpx"
  current="{{current}}"
  autoplay="{{autoplay}}"
  duration="{{duration}}"
  interval="{{interval}}"
  navigation="{{navigation}}"
  paginationPosition="{{paginationPosition}}"
  list="{{imageFileList}}"></t-swiper>
<view class="detail-container">
  <view class="detail-title">{{title}}</view>
  <view class="detail-time-text">时间：{{time}}</view>
  <view class="detail-info-box">
    <view class="detail-info-title">位置</view>
    <view class="detail-info-tips">{{address}}</view>
  </view>
  <view class="detail-info-box">
    <view class="detail-info-title">联系方式</view>
    <view class="detail-info-tips">{{phoneNumber}}</view>
  </view>
  <view
    class="detail-info-box"
    style="margin-bottom: 0">
    <view class="detail-info-title">情况说明</view>
    <view class="detail-info-tips">{{desc}}</view>
  </view>
</view>
