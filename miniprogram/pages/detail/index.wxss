.custom-navbar {
  /* opacity: 0; */
  float: left;
  --td-navbar-bg-color: none !important;
}

page {
  background-color: #f1f4f8;
}

.custom-swiper {
  --td-swiper-radius: 0rpx;
}

.detail-container {
  background-color: #f1f4f8;
  border-radius: 48rpx 48rpx 0 0;
  padding: 30rpx;
  position: relative;
  bottom: 48rpx;
}

.detail-title {
  font-size: 36rpx;
  color: #222b4a;
  margin-bottom: 24rpx;
}

.detail-time-text {
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 40rpx;
}

.t-swiper-nav {
  position: absolute !important;
  bottom: 72rpx !important;
}

.detail-info-box {
  background-color: #fff;
  font-size: 28rpx;
  border-radius: 32rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
}

.detail-info-title {
  color: #222b4a;
  margin-bottom: 20rpx;
}

.detail-info-tips {
  color: #989898;
}
